<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

   <ImageView
       android:id="@+id/img"
       android:src="@drawable/logo"
       android:layout_gravity="center_horizontal"
       android:layout_width="100dp"
       android:layout_height="100dp"/>
    <TextView
        android:id="@+id/job_title"
        android:layout_marginLeft="20dp"
        android:text="Enter Job Title"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
  <EditText
      android:id="@+id/et_job_title"
      android:layout_marginLeft="20dp"
      android:layout_marginTop="10dp"
      android:padding="7dp"
      android:hint="enter job title"
      android:layout_marginRight="20dp"
      android:layout_width="match_parent"
      android:background="@drawable/et_styles"
      android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/location"
        android:layout_marginLeft="20dp"
        android:text="Enter Job Location"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/et_location"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:padding="7dp"
        android:drawableRight="@drawable/ic_baseline_location_on_24"
        android:hint="enter job location"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:background="@drawable/et_styles"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/searchbtn"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="SEARCH JOB"
        android:background="@color/colorPrimary"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View
        android:background="@color/grayFontsColor"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <TextView
        android:id="@+id/suggested_jobs"
        android:layout_width="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:text="Suggested Jobs"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_height="wrap_content"/>
   <androidx.recyclerview.widget.RecyclerView
       android:id="@+id/recycle_jobs"
       android:layout_marginLeft="20dp"
       android:layout_marginRight="20dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"/>

</LinearLayout>