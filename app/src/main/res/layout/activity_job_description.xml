<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".JobDescriptionActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/report_job"
            android:textStyle="bold"
            android:layout_gravity="right"
            android:textSize="20dp"
            android:textColor="#000000"
            android:text="Report Job"
            android:drawableLeft="@drawable/ic_baseline_report_24"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/designation"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:text="Junior Software Developer"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/company_name"
            android:layout_marginTop="5dp"
            android:textSize="20dp"
            android:textColor="#000000"
            android:text="XXX pvt.ltd"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/location"
            android:layout_marginTop="5dp"
            android:textSize="20dp"
            android:textColor="#000000"
            android:text="Montreal,QC"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
           android:background="@color/grayFontsColor"
            android:layout_width="match_parent"
            android:layout_height="5dp"/>
        <TextView
            android:id="@+id/job_details"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:text="Jobs Details"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:text="Salary"
            android:textColor="#000000"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/salary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="$30-$40 per hour"
            android:textColor="#000000"
            android:textSize="20dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:text="Language"
            android:textColor="#000000"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/englishlanguage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="English"
            android:textColor="#000000"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/frenchlanguage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="French"
            android:textColor="#000000"
            android:textSize="20dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:text="Application Deadline"
            android:textColor="#000000"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/application_deadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="20-07-2020"
            android:textColor="#000000"
            android:textSize="20dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:text="Joining Date"
            android:textColor="#000000"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/joining_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="20-07-2020"
            android:textColor="#000000"
            android:textSize="20dp" />
        <View
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/grayFontsColor"
            android:layout_width="match_parent"
            android:layout_height="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:text="Full Description"
            android:textColor="#000000"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/et_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="Father's Day was founded in Spokane, Washington at the YMCA in 1910 by Sonora Smart Dodd, who was born in Arkansas.[3] Its first celebration was in the Spokane YMCA on June 19, 1910.Her father, the Civil War veteran William Jackson Smart, was a single parent who raised his six children there. After hearing a sermon about Anna Jarvis's Mother's Day at Central Methodist Episcopal Church in 1909, she told her pastor that fathers should have a similar holiday honoring them."
            android:textColor="#000000"
            android:textSize="20dp" />

        <View
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/grayFontsColor"
            android:layout_width="match_parent"
            android:layout_height="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:text="Skills Needed"
            android:textColor="#000000"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/skill_needed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="Android"
            android:textColor="#000000"
            android:textSize="20dp" />


        <View
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/grayFontsColor"
            android:layout_width="match_parent"
            android:layout_height="5dp"/>






        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:text="Qualifications"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/qualification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="Internship In Android"
            android:textColor="#000000"
            android:textSize="20dp" />
        <View
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/grayFontsColor"
            android:layout_width="match_parent"
            android:layout_height="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:text="Industry"
            android:textColor="#000000"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/industry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="Minimum 2 years Java"
            android:textColor="#000000"
            android:textSize="20dp" />
        <View
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/grayFontsColor"
            android:layout_width="match_parent"
            android:layout_height="5dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_marginLeft="10dp"
                android:text="SAVE"
                android:background="@drawable/et_styles"
                android:layout_width="180dp"
                android:layout_height="wrap_content">

            </Button>
            <Button
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:text="Apply"
                android:background="@drawable/et_styles"
                android:layout_width="180dp"
                android:layout_height="wrap_content">


            </Button>
        </LinearLayout>
    </LinearLayout>
</ScrollView>