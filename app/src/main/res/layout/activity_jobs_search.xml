<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Jobs_search">
    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="left"
        android:paddingTop="20dp"
        android:layout_margin="10dp"
        android:drawableLeft="@drawable/ic_outline_search_24"
        android:text="web developer jobs in Montreal, Qc"
        android:textAllCaps="false"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Suggested Jobs"
            android:layout_margin="10dp"
            android:textStyle="bold">
        </TextView>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="#fff"
            android:layout_height="110dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="   Front End Web Developer"
                    android:layout_marginTop="20dp"
                    android:textColor="#000000"
                    android:textSize="20dp"

                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/ic_baseline_favorite_border_24"
                    android:layout_height="30dp"/>

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:text="     Design Shopp"
                android:layout_marginTop="5dp"
                android:textColor="#000000"
                android:textSize="15dp"

                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="     Montreal,QC"
                android:layout_marginTop="5dp"
                android:textColor="#000000"
                android:textSize="15dp"

                android:layout_height="wrap_content"/>


        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="#fff"
            android:layout_height="110dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="   Senior Android Developer"
                    android:layout_marginTop="20dp"
                    android:textColor="#000000"
                    android:textSize="20dp"

                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/ic_baseline_favorite_border_24"
                    android:layout_height="30dp"/>

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:text="     Design Shopp"
                android:layout_marginTop="5dp"
                android:textColor="#000000"
                android:textSize="15dp"

                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="     Montreal,QC"
                android:layout_marginTop="5dp"
                android:textColor="#000000"
                android:textSize="15dp"

                android:layout_height="wrap_content"/>


        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="#fff"
            android:layout_height="110dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="   PHP Developer"
                    android:layout_marginTop="20dp"
                    android:textColor="#000000"
                    android:textSize="20dp"

                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_marginLeft="170dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/ic_baseline_favorite_border_24"
                    android:layout_height="30dp"/>

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:text="     Design Shopp"
                android:layout_marginTop="5dp"
                android:textColor="#000000"
                android:textSize="15dp"

                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="     Montreal,QC"
                android:layout_marginTop="5dp"
                android:textColor="#000000"
                android:textSize="15dp"

                android:layout_height="wrap_content"/>


        </LinearLayout>
    </LinearLayout>
</LinearLayout>