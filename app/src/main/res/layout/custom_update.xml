<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutclick"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/img"
        android:layout_width="120dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="100dp"
        android:background="#000000"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:layout_marginTop="15dp"
        android:src="@drawable/exp_img" />
    <TextView
        android:id="@+id/designation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:drawablePadding="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Designation"
        android:padding="2dp"
        android:cursorVisible="true" />
    <EditText
        android:id="@+id/et_designation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below = "@+id/errorView"
        android:layout_centerHorizontal = "true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Designation"
        android:padding="8dp"
        android:cursorVisible="true" />
    <TextView
        android:id="@+id/institute"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:drawablePadding="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Insitute"
        android:padding="2dp"
        android:cursorVisible="true" />
    <EditText
        android:id="@+id/et_institute"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below = "@+id/errorView"
        android:layout_centerHorizontal = "true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Insitute"
        android:padding="8dp"
        android:cursorVisible="true" />

    <TextView
        android:id="@+id/start_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:drawablePadding="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Start Date"
        android:padding="2dp"
        android:cursorVisible="true" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/et_start_date"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below = "@+id/errorView"
            android:layout_centerHorizontal = "true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="Start Date"
            android:padding="8dp"
            android:cursorVisible="true" />
        <Button
            android:id="@+id/spickdate"
            android:text="PickDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:id="@+id/end_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:drawablePadding="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="End Date"
        android:padding="2dp"
        android:cursorVisible="true" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/et_end_date"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below = "@+id/errorView"
            android:layout_centerHorizontal = "true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="End Date"
            android:padding="8dp"
            android:cursorVisible="true" />
        <Button
            android:id="@+id/pickdate"
            android:text="PickDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <Button
        android:id="@+id/update"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Update"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/faltu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:visibility="gone"
        android:drawablePadding="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="faltu"
        android:padding="2dp"
        android:cursorVisible="true" />

</LinearLayout>