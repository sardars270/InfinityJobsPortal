<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/edit_text_background">

    <TextView
        android:id="@+id/applicantNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="8dp"
        android:text="Applicant Name"
        android:textSize="24sp"
        android:fontFamily="@font/robotoblack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/applicantAddressTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:textSize="18sp"
        android:text="Application Address"
        android:fontFamily="@font/robotoregular"
        app:layout_constraintStart_toStartOf="@+id/applicantNameTextView"
        app:layout_constraintTop_toBottomOf="@+id/applicantNameTextView" />

    <Button
        android:id="@+id/contactApplicantButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/button_pressed"
        android:fontFamily="@font/robotoregular"
        android:padding="10dp"
        android:text="Contact"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/applicantAddressTextView"
        app:layout_constraintTop_toBottomOf="@+id/applicantAddressTextView" />

    <Button
        android:id="@+id/viewApplicantProfileButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/button_pressed"
        android:fontFamily="@font/robotoregular"
        android:padding="10dp"
        android:text="View Profile"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/contactApplicantButton" />

</androidx.constraintlayout.widget.ConstraintLayout>