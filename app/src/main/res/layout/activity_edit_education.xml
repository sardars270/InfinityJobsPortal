<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".EditEducation">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <Button
            android:textStyle="bold"
            android:textSize="20dp"
            android:id="@+id/button_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="X"/>

        <TextView
            android:id="@+id/Add_education"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:text="Edit Education"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Update"
            />

    </LinearLayout>

    <ScrollView
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >


            <LinearLayout
                android:layout_width="391dp"
                android:layout_height="97dp"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/t1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="School"
                    android:textColor="#000000"
                    android:textSize="20sp" />


                <LinearLayout
                    android:layout_width="391dp"
                    android:layout_height="97dp"
                    android:orientation="horizontal"
                    android:weightSum="5"
                    >
                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1.5"
                        android:background="@drawable/schoolicon" />

                <EditText
                    android:id="@+id/school"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:layout_weight="3.5"
                    android:inputType="textPersonName" />
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_margin="5dp"
                android:id="@+id/t2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Degree"
                android:textSize="20sp"
                android:textColor="#000000"/>

            <EditText
                android:id="@+id/Degree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="" />
            <TextView
                android:layout_margin="5dp"
                android:id="@+id/t3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Field of study"
                android:textSize="20sp"
                android:textColor="#000000"/>

            <EditText
                android:id="@+id/studyField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_margin="5dp"
                        android:id="@+id/t4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Start date"
                        android:textSize="20sp"
                        android:textColor="#000000"/>
                    <EditText
                        android:layout_margin="5dp"
                        android:id="@+id/start_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="date"
                        />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_margin="5dp"
                            android:id="@+id/t5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="End date"
                            android:textSize="20sp"
                            android:textColor="#000000"/>
                        <EditText
                            android:id="@+id/end_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="5dp"
                            android:ems="10"

                            android:inputType="date"
                            />


                        <TextView
                            android:layout_below="@+id/end_date"
                            android:id="@+id/expected"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Or expected graduation" />
                    </LinearLayout>

                </RelativeLayout>


            </LinearLayout>
            <TextView
                android:layout_margin="5dp"
                android:id="@+id/t6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grade(optional)"
                android:textSize="20sp"
                android:textColor="#000000"/>
            <EditText
                android:layout_margin="5dp"
                android:id="@+id/grade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                />
            <TextView
                android:layout_margin="5dp"
                android:id="@+id/t7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Activities and societies"
                android:textSize="20sp"
                android:textColor="#000000"/>
            <EditText
                android:layout_margin="5dp"
                android:id="@+id/activities_societies"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Example: Alpha phi omega, NCC, Debate Team" />
            <TextView
                android:layout_margin="5dp"
                android:id="@+id/t8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textSize="20sp"
                android:textColor="#000000"/>
            <EditText
                android:layout_margin="5dp"
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                />


            <Button
                android:id="@+id/delete"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete" />

        </LinearLayout>

    </ScrollView>



</LinearLayout>
